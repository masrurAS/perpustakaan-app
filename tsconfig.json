{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@pkgjson": ["package.json"],
      "@config": ["./src/config/"],
      "@support": ["./src/support/"],
      "@images": ["./src/assets/img/"],
      "@store": ["./src/store/"],
      "@http": ["./src/http/"],
      "@actions": ["./src/actions/"],
      "@components": ["./src/components/"],
      "@screens": ["./src/screens/"],
      "@theme": ["./src/theme/"],

      "@config/*": ["./src/config/*"],
      "@support/*": ["./src/support/*"],
      "@images/*": ["./src/assets/img/*"],
      "@store/*": ["./src/store/*"],
      "@http/*": ["./src/http/*"],
      "@actions/*": ["./src/actions/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@theme/*": ["./src/theme/*"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}